<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="eyresapps.com.wct.MainActivity"
    android:background="#FFFFFF">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context=".MapsActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />
        <android.support.v7.widget.CardView
            android:clickable="true"
            android:id="@+id/informationCardView"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:cardCornerRadius="0dp">
            <RelativeLayout
                android:id="@+id/streetLayout"
                android:background="#3D82F8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:text="street name"
                    android:id="@+id/streetName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/streetName"
                    android:text="clear with periodic clouds : 7Â°C"
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/weather"
                    android:text="8:34 PM"
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    <eyresapps.com.wct.LockableScrollView
        android:layout_below="@+id/informationCardView"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/informationLayout"
            android:background="#dddddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/crimesCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:id="@+id/crimeRl"
                    android:background="#FFFFFF"
                    android:layout_below="@+id/streetLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:text="Crimes"
                        android:id="@+id/crimesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_below="@+id/crimesTitle"
                        android:id="@+id/crimesRv"
                        android:layout_width="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:layout_height="100dp">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/crimesCardView"
                android:id="@+id/aboutCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:background="#FFFFFF"
                    android:layout_below="@+id/streetLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:text="About Location"
                        android:id="@+id/aboutTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@+id/aboutTitle"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000000"
                        android:text="Our job is to protect the public and keep Nottinghamshire a safe place for people to live and work in and visit.
        Internationally famous for Sherwood Forest, home of the Robin Hood legend, the principle of serving and protecting our communities remains just as true as it did back then.
        The force has a dedicated workforce of just under 3,200 officers and staff, who are supported by a growing army of hundreds of Special Constables, cadets and volunteers.
    Our job is to protect the public and keep Nottinghamshire a safe place for people to live and work in and visit.
        Internationally famous for Sherwood Forest, home of the Robin Hood legend, the principle of serving and protecting our communities remains just as true as it did back then.
        The force has a dedicated workforce of just under 3,200 officers and staff, who are supported by a growing army of hundreds of Special Constables, cadets and volunteers.
    Our job is to protect the public and keep Nottinghamshire a safe place for people to live and work in and visit.
        Internationally famous for Sherwood Forest, home of the Robin Hood legend, the principle of serving and protecting our communities remains just as true as it did back then.
        The force has a dedicated workforce of just under 3,200 officers and staff, who are supported by a growing army of hundreds of Special Constables, cadets and volunteers.
    Our job is to protect the public and keep Nottinghamshire a safe place for people to live and work in and visit.
        Internationally famous for Sherwood Forest, home of the Robin Hood legend, the principle of serving and protecting our communities remains just as true as it did back then.
        The force has a dedicated workforce of just under 3,200 officers and staff, who are supported by a growing army of hundreds of Special Constables, cadets and volunteers."
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/aboutCardView"
                android:id="@+id/eventsAndPrioritiesCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:background="#FFFFFF"
                    android:layout_below="@+id/streetLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="#000000"
                        android:text="Any Events or Priorities"
                        android:id="@+id/additionalTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@+id/additionalTitle"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textColor="#000000"
                        android:text="None"
                        android:id="@+id/additional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/eventsAndPrioritiesCardView"
                android:id="@+id/socialMediaCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp">
                <RelativeLayout
                    android:background="#FFFFFF"
                    android:layout_below="@+id/streetLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/youtube"
                        android:src="@drawable/youtube"
                        android:layout_width="match_parent"
                        android:layout_height="540dp" />
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/youtube"
                        android:id="@+id/tweets"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </eyresapps.com.wct.LockableScrollView>
</RelativeLayout>
