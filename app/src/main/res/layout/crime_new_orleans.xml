<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardViewCrime"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="Crime Type"
            android:id="@+id/crime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/crime"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Date Occured: "
            android:id="@+id/occured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/crime"
            android:layout_toRightOf="@+id/occured"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="10/10/2018"
            android:id="@+id/dateOccur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/dateOccur"
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Date Reported: "
            android:id="@+id/reported"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/dateOccur"
            android:layout_toRightOf="@+id/reported"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:text="10/10/2018"
            android:id="@+id/dateReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#000"
            android:layout_below="@+id/dateReport"
            android:textStyle="bold"
            android:text="Description:"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:textSize="16sp"
            android:id="@+id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000"
            android:layout_below="@+id/descriptionTitle"
            android:text="What happened if available"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="5dp"
            android:textSize="14sp"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>